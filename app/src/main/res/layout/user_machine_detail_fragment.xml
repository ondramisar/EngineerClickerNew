<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/user_machine_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="11dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="dddddddddddddddd" />

    <Button
        android:id="@+id/user_machine_confirm"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:text="CONFIRM"/>

    <ImageView
        android:id="@+id/user_machine_img"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_below="@+id/user_machine_detail_name"
        android:layout_margin="10dp"
        android:background="#dddddd" />

    <ImageView
        android:id="@+id/user_machine_worker_img"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_below="@+id/user_machine_detail_name"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/user_machine_img"
        android:background="#dddddd" />

    <Button
        android:id="@+id/user_machine_add_worker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_machine_img"
        android:text="add" />

    <Button
        android:id="@+id/user_machine_upgrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/user_machine_add_worker"
        android:layout_alignBottom="@+id/user_machine_add_worker"
        android:layout_toEndOf="@+id/user_machine_add_worker"
        android:text="Upgarede" />

    <Button
        android:id="@+id/user_machine_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_machine_img"
        android:layout_toEndOf="@+id/user_machine_upgrade"
        android:text="remove" />

    <Button
        android:id="@+id/user_machine_play_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_machine_upgrade"
        android:text="PLAY GAME" />


    <TextView
        android:id="@+id/user_machine_detail_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_machine_play_game"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:text="STATS" />

    <TextView
        android:id="@+id/user_machine_detail_lvl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_machine_detail_stats"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="12sp"
        tools:text="LVL 1" />

    <TextView
        android:id="@+id/user_machine_detail_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_machine_detail_lvl"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        tools:text="TIME: 100000" />

    <TextView
        android:id="@+id/user_machine_detail_materials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_machine_detail_time"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        tools:text="MATERIALS: 100" />
</RelativeLayout>