<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/user_machine_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="dddddddddddddddd" />

    <TextView
        android:id="@+id/user_machine_lvl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_machine_name"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        tools:text="LVL 1" />

    <TextView
        android:id="@+id/user_machine_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_machine_lvl"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        tools:text="TIME: 100000" />

    <Button
        android:id="@+id/user_machine_detail_btn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:text="DETAIL" />

    <ImageView
        android:id="@+id/user_machine_img"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/user_machine_time"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#dddd" />

    <ImageView
        android:id="@+id/user_machine_worker_img"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_below="@+id/user_machine_time"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/user_machine_img"
        android:background="#dddd" />

    <ProgressBar
        android:id="@+id/user_machine_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_machine_img" />

</RelativeLayout>